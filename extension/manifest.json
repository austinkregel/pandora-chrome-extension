{
  "manifest_version": 2,
  "name": "Github contributions",
  "description": "This extension displays your daily Github contributions.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.pandora.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "jquery.js",
        "injection.js"
      ],
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
